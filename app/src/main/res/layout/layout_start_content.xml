<?xml version="1.0" encoding="utf-8"?>


    <!-- CONTENT -->

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context=".MainActivity"
        android:orientation="vertical"
        android:id="@+id/ll_content_parent"
        android:weightSum="100"
        android:background="@color/background">

    <!-- Starta / färdig -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:weightSum="100"
        android:background="@drawable/all_around_stroke"
        android:padding="1dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:layout_gravity="center"
            android:id="@+id/ll_start_start_at">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Starta kl."
                android:background="@color/tieto_green"
                android:textColor="#ffffff"
                android:textSize="@dimen/tv_start_param"
                android:gravity="center"
                android:id="@+id/tv_start_start_at" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:layout_gravity="center"
            android:id="@+id/ll_start_ready_at">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Färdig kl."
                android:background="#ffffff"
                android:textColor="@color/tieto_darkblue"

                android:textSize="@dimen/tv_start_param"
                android:gravity="center"
                android:id="@+id/tv_start_ready_at" />
        </LinearLayout>

    </LinearLayout>

    <!-- EMPTY -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="5"></LinearLayout>

    <!-- Klockan -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:weightSum="100"
        android:background="@drawable/all_around_stroke"
        android:padding="1dp"
        android:gravity="center_vertical"
        android:id="@+id/ll_start_time">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Klockan"
            android:id="@+id/tv_start_time" />
    </LinearLayout>

    <!-- EMPTY -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="5"></LinearLayout>

    <!-- Billigast / Vindkraft -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:weightSum="2"
        android:background="@drawable/all_around_stroke"
        android:padding="1dp">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="10">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="7"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/padding_left">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Billigast El"
                    android:textSize="@dimen/tv_start_param"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="3"
                android:gravity="center_vertical">

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Switch"
                    android:id="@+id/sw_start_cheapest"
                    android:checked="false"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="10">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="7"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/padding_left">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vindkraft"
                    android:textSize="@dimen/tv_start_param"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="3"
                android:gravity="center_vertical">

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Switch"
                    android:id="@+id/sw_start_wind"
                    android:checked="false"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- EMPTY -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="5"></LinearLayout>

    <!-- Tvättprogram -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:weightSum="10"
        android:background="@drawable/all_around_stroke"
        android:paddingLeft="@dimen/padding_left"
        android:gravity="center_vertical"
        android:id="@+id/ll_start_choose_program">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="8"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Välj tvättprogram"
                android:textSize="@dimen/tv_start_param"
                android:id="@+id/tv_start_program" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:id="@+id/ll_start_program_arrow">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=">"
                android:textSize="@dimen/forward_arrow"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="5" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:background="@drawable/all_around_stroke"
        android:gravity="center_vertical"
        android:padding="1dp"
        android:id="@+id/ll_start_start_button">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical|center_horizontal"
            android:background="@color/tieto_green">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="STARTA"
                android:textSize="@dimen/button_text_size"
                android:textColor="@color/button_text_color" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
